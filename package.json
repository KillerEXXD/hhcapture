{
  "name": "hhtool-modular",
  "version": "1.0.0",
  "description": "Modular refactored version of Poker Hand Collector",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "log-server": "node server/logServer.js",
    "screenshot-watcher": "powershell -ExecutionPolicy Bypass -File scripts/screenshot-watcher.ps1",
    "dev:full": "concurrently \"npm run dev\" \"npm run log-server\" \"npm run screenshot-watcher\" --names \"APP,LOGS,SHOTS\" --prefix-colors \"cyan,green,magenta\"",
    "clear-logs": "curl -X DELETE http://localhost:3002/api/logs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:run": "jest --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "cross-env SLOWMO=1000 playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playground": "tsx playground/test-playground.ts",
    "playground:watch": "tsx watch playground/test-playground.ts"
  },
  "keywords": [
    "poker",
    "hand",
    "tracker",
    "modular"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "xlsx": "^0.18.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
